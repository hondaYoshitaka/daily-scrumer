extends layout

block stylesheet
    link(rel='stylesheet', href='/stylesheets/setting.css')
block javascript
    script(src='/javascripts/view.setting.js')

block content
    - var label = msg.label.settings;

    br
    .etched-line#top-line
    h2.etched
        | #{label.sprints}
    section#sprint-section.paper.inline.float-left
        .paper-content
            h3.paper-title #{label.projects}
            ul#project-list.positioned.no-style-list

            a.list-item-add-btn#projects-add-btn
                i.icon
                    span.add-icon-bar-v
                    span.add-icon-bar-h

    br.clear
    br
    .etched-line
    br
    h2.etched
        | #{label.members}
    section#member-section.paper.inline.float-left
        .paper-content
            h3.paper-title #{label.members}
            ul#mebmer-list.positioned.no-style-list
                - each member in team.members
                    li
                        | #{member.name}
            a.list-item-add-btn#member-add-btn
                i.icon
                    span.add-icon-bar-v
                    span.add-icon-bar-h

    br.clear


